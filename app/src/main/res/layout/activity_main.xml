<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/replace_package_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Replace Package Manager"
            android:textSize="20dp"
            android:textAllCaps="false"

    />

    <Button
            android:id="@+id/replace_os"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Replace OS"
            android:textSize="20dp"
            android:textAllCaps="false"
    />

    <Button
            android:id="@+id/test_TransactionTooLargeException"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test TransactionTooLargeException"
            android:textSize="20dp"
            android:textAllCaps="false"
    />

</LinearLayout>